{%- comment -%}
  Sanad Trust
  - Lebanon-first payment reassurance
  - Explicitly states product-only (no roadside services)
{%- endcomment -%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<section
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
  data-testid="sanad-trust-{{ section.id }}"
>
  <div class="sanad-trust">
    {% if section.settings.heading != blank %}
      <h2 class="sanad-trust__title">{{ section.settings.heading | escape }}</h2>
    {% endif %}

    <div class="sanad-trust__grid" role="list">
      {% for block in section.blocks %}
        <div class="sanad-trust__item" role="listitem">
          <div class="sanad-trust__item-title">{{ block.settings.title | escape }}</div>
          {% if block.settings.body != blank %}
            <div class="sanad-trust__item-body">{{ block.settings.body }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .sanad-trust {
    max-width: 1040px;
    margin: 0 auto;
    display: grid;
    gap: 18px;
  }

  .sanad-trust__title {
    margin: 0;
    font-size: clamp(1.15rem, 1.75vw, 1.4rem);
    letter-spacing: -0.02em;
  }

  .sanad-trust__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  @media (min-width: 750px) {
    .sanad-trust__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 14px;
    }
  }

  .sanad-trust__item {
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 18px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.9);
  }

  .sanad-trust__item-title {
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    margin-bottom: 6px;
  }

  .sanad-trust__item-body {
    font-size: 0.9rem;
    line-height: 1.45;
    color: rgba(29, 29, 31, 0.78);
  }

  .sanad-trust__item-body p {
    margin: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Sanad Trust",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Built for Lebanon. Built on trust."
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "default": "page-width",
      "options": [
        { "value": "full-width", "label": "Full" },
        { "value": "page-width", "label": "Page" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    { "type": "range", "id": "padding-block-start", "label": "Top padding", "min": 0, "max": 120, "step": 4, "default": 20 },
    { "type": "range", "id": "padding-block-end", "label": "Bottom padding", "min": 0, "max": 160, "step": 4, "default": 44 }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust item",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Cash on Delivery" },
        { "type": "richtext", "id": "body", "label": "Body", "default": "<p>Pay on delivery — simple and familiar.</p>" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sanad Trust",
      "blocks": [
        { "type": "trust_item", "settings": { "title": "Cash on Delivery", "body": "<p>Pay on delivery — simple and familiar.</p>" } },
        { "type": "trust_item", "settings": { "title": "Whish Money", "body": "<p>Fast local payments supported.</p>" } },
        { "type": "trust_item", "settings": { "title": "No Roadside Services", "body": "<p>We sell products only — no towing, no dispatch.</p>" } },
        { "type": "trust_item", "settings": { "title": "Curated Kits", "body": "<p>No random accessories. Only what belongs in the kit.</p>" } }
      ]
    }
  ]
}
{% endschema %}

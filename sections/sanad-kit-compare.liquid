{%- comment -%}
  Sanad Kit Compare
  - Compact one-row comparison strip with three kit columns.
{%- endcomment -%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<section
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
  data-testid="sanad-kit-compare-{{ section.id }}"
>
  <div class="sanad-compare" role="list" aria-label="Kit comparison strip">
    {% for block in section.blocks %}
      <article class="sanad-compare__card" role="listitem" {{ block.shopify_attributes }}>
        <div class="sanad-compare__kicker">{{ block.settings.kicker | escape }}</div>
        <p class="sanad-compare__card-title">{{ block.settings.title | escape }}</p>
      </article>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .sanad-compare {
    max-width: 1140px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  @media (min-width: 900px) {
    .sanad-compare {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .sanad-compare__card {
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 16px;
    padding: 14px 16px;
    background: rgba(255, 255, 255, 0.9);
  }

  .sanad-compare__kicker {
    font-size: 0.74rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(29, 29, 31, 0.6);
    margin-bottom: 6px;
  }

  .sanad-compare__card-title {
    margin: 0;
    font-size: 0.95rem;
    color: rgba(29, 29, 31, 0.9);
    line-height: 1.35;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Sanad Kit Compare",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Pick the kit that matches your intent." },
    { "type": "richtext", "id": "subheading", "label": "Subheading", "default": "<p>Three kits only. Each one has a clear purpose — so you don’t overbuy, underbuy, or carry junk.</p>" },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "default": "page-width",
      "options": [
        { "value": "full-width", "label": "Full" },
        { "value": "page-width", "label": "Page" }
      ]
    },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding-block-start", "label": "Top padding", "min": 0, "max": 120, "step": 4, "default": 12 },
    { "type": "range", "id": "padding-block-end", "label": "Bottom padding", "min": 0, "max": 160, "step": 4, "default": 28 }
  ],
  "blocks": [
    {
      "type": "kit",
      "name": "Kit",
      "limit": 3,
      "settings": [
        { "type": "text", "id": "kicker", "label": "Kicker", "default": "Kit" },
        { "type": "text", "id": "title", "label": "Title", "default": "Emergency Kit" },
        { "type": "richtext", "id": "lead", "label": "Lead", "default": "<p>Prepared for sudden moments — without pretending to be a service company.</p>" },
        { "type": "richtext", "id": "bullets", "label": "Bullets", "default": "<ul><li>Safety + visibility basics</li><li>Power and charging essentials</li><li>Self-preparedness, not repair</li></ul>" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sanad Kit Compare",
      "blocks": [
        {
          "type": "kit",
          "settings": {
            "kicker": "Emergency",
            "title": "Emergency Kit",
            "lead": "<p>Prepared for sudden situations — clean, practical, non-dramatic.</p>",
            "bullets": "<ul><li>Visibility + safety items</li><li>Basic breakdown tools</li><li>Power essentials</li></ul>"
          }
        },
        {
          "type": "kit",
          "settings": {
            "kicker": "Comfort",
            "title": "Comfort Kit",
            "lead": "<p>Relief for long drives, heat, traffic, and fatigue.</p>",
            "bullets": "<ul><li>Seat and posture comfort</li><li>Cooling / convenience</li><li>Interior usability</li></ul>"
          }
        },
        {
          "type": "kit",
          "settings": {
            "kicker": "Maintenance",
            "title": "Maintenance Kit",
            "lead": "<p>Preventive, light-upkeep tools — keep the car in shape.</p>",
            "bullets": "<ul><li>Cleaning + care</li><li>Basic monitoring</li><li>Small preventive accessories</li></ul>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
